<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your Listing", rooms_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Your Trips", your_trips_path, class: "sidebar-link" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Your Reservations
			</div>
			<table>
				<tr>
					<th>start date</th>
					<th>end date</th>
					<th>address</th>
					<th>total price</th>
				</tr>
				
				<% @reservations.each do |reservation| %>
				<tr>
					<td><%= reservation.start_date.strftime('%v') %></td>
					<td><%= reservation.end_date.strftime('%v') %></td>
					<td><%= reservation.room.address %></td>
					<td>$<%= reservation.total %></td>
					<td><%= link_to "Cancel Booking", reservation, method: :delete %></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>